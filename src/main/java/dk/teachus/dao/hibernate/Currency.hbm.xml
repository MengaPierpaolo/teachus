<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="dk.teachus.domain.impl" default-lazy="false">

    <class name="CurrencyImpl" table="currency">
		<id name="id" column="id" access="field">
            <generator class="native"/>
        </id>
        
		<version name="version" access="field" />
		
		<many-to-one name="teacher" column="teacher_id" class="TeacherImpl" not-null="true" cascade="none" fetch="join" />
		
		<property name="label" length="10" not-null="true" />
        
        <property name="base" not-null="true" type="dk.teachus.dao.hibernate.BooleanType">
        	<column name="base" default="false" />
        </property>
        
        <property name="exchangeRate" column="exchange_rate" not-null="true" />
    </class>

</hibernate-mapping>